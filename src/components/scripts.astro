<script is:inline>
document.addEventListener('DOMContentLoaded', function () {
  const header = document.querySelector('#page-header');
  let active = 0;
  const slides = document.querySelectorAll('main>section');
  const allButtons = [
    ...document.querySelectorAll('.nav-item'),
    document.querySelector('#logo>button')
  ];

  const activateSlide = (index=active) => {
    allButtons.forEach(button => button.classList.remove('active'));
    allButtons[index].classList.add('active');
    allButtons[index + 5].classList.add('active');
    slides.forEach((slide) => {
      slide.style.opacity = 0;
      slide.style.display = 'none';
    });

    slides[index].style.display = 'block';

    setTimeout(() => {
      slides[index].style.opacity = 1;
    }, 100);
  }

  const handleScroll = () => {
      header.classList.toggle('fixed-header', window.scrollY > 0);
  }

  window.addEventListener('scroll', handleScroll);

  allButtons.forEach((button, index) => {
    button.addEventListener('click', function () {
      active = index % 5;
      activateSlide();
    })
  })

  const bg = document.querySelector('body>picture>img').currentSrc;
    document.querySelectorAll('#skills li').forEach((item) => {
      item.style.backgroundImage = `url('${bg}')`;
  })

  activateSlide();
})
</script>